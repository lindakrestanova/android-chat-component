<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--    android:onClick="@{() -> listener.onMessageClick(item)}"-->

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/spacing_24"
        android:layout_marginTop="@dimen/spacing_8"
        android:layout_marginEnd="@dimen/spacing_8"
        android:layout_marginBottom="@dimen/spacing_8"
        android:autoLink="web|phone|email"
        android:background="@drawable/bg_rectangle_rounded"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/spacing_2"
        android:paddingStart="@dimen/spacing_16"
        android:paddingTop="@dimen/spacing_8"
        android:paddingEnd="@dimen/spacing_24"
        android:paddingBottom="10dp"
        android:textAppearance="@style/TextAppearance.Chat.Component.Message"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_message_date"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello girl! How are you?" />

    <com.strv.chat.library.ui.TimeTextView
        android:id="@+id/tv_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spacing_8"
        android:layout_marginTop="@dimen/spacing_8"
        android:layout_marginBottom="@dimen/spacing_8"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.Chat.Component.Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="now" />

</androidx.constraintlayout.widget.ConstraintLayout>
